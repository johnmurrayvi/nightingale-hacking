#include "nsISupports.idl"

interface sbILibrary;
interface nsIURI;

[scriptable, uuid(5e4e170f-7052-4f2b-910d-cafc1f35d4c9)]
interface sbIMediaManagementService : nsISupports
{
  /**
   * the library being managed by the media management service
   */
  readonly attribute sbILibrary managedLibrary;
  
  /**
   * whether the media management service is enabled
   */
  attribute boolean isEnabled;
  
  /**
   * whether the media management service is currently actively scanning
   * the managed library
   */
  readonly attribute boolean isScanning;

  /**
   * Runs the management job to make sure that all items in the
   * media list are located and organized under the media library folder. 
   * TODO: possibly implement later if at all
   */
  //sbIJobProgress consolidateList(in sbIMediaList aMediaList);
  /**
   * Returns the managed folder URI
   */
   readonly attribute nsIURI managedFolder;
};

