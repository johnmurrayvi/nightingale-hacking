<!-- Import external definitions. -->
<?xml-stylesheet href="chrome://global/skin" type="text/css"?>
<?xml-stylesheet href="chrome://global/content/commonDialog.css"
                 type="text/css"?>
<?xml-stylesheet href="chrome://songbird-dialogs/skin/manageMediaPreview.css"
                 type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/songbird.css" type="text/css"?>
<?xml-stylesheet href="chrome://songbird/skin/manageMediaPreview.css"
                 type="text/css"?>
<?xml-stylesheet href="chrome://songbird/content/bindings/bindings.css"
                 type="text/css"?>

<!DOCTYPE overlay [
<!ENTITY % brandDTD SYSTEM "chrome://branding/locale/brand.dtd">
<!ENTITY % songbirdDTD SYSTEM "chrome://songbird/locale/songbird.dtd">
<!ENTITY % songbirdPrefsDTD SYSTEM "chrome://songbird/locale/preferences-songbird.dtd">
%brandDTD;
%songbirdDTD;
%songbirdPrefsDTD;
]>

<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
        xmlns:html="http://www.w3.org/TR/xhtml1/strict"
        id="media_management_preview_dialog"
        title="&prefWindow.manageMedia.preview.title;"
        hidechrome="true"
        flex="1"
        type="songbird"
        minwidth="600"
        minheight="450"
        resizers="all"
        buttons="accept"
        ondialogaccept="onExit();"
        onload="mediaManagePreview.onLoad();">

  <!-- Use Songbird window region. -->
  <windowregion/>

  <notificationbox id="preview_notificationbox" flex="1">
    <label id="preview_description"
           value="&prefWindow.manageMedia.preview.description.label2;"/>
    <richlistbox id="preview_listbox" flex="1" seltype="single"/>
    <richlistitem id="preview_listitem_template" collapsed="true"
                  style="display:block;" class="preview_listitem"
                  contextmenu="preview_list_popup">
      <vbox anonid="preview_listitem_container"
            class="preview_listitem_container"
            dir="&prefWindow.manageMedia.preview.item.direction;">
        <label anonid="preview_listitem_prefix"
               class="preview_listitem_prefix preview_listitem_contents"/>
        <description anonid="preview_listitem_source"
                     class="preview_listitem_source preview_listitem_contents"
                     style="-moz-user-select:text;"/>
        <label anonid="preview_listitem_infix"
               class="preview_listitem_infix preview_listitem_contents"/>
        <description anonid="preview_listitem_destination"
                     class="preview_listitem_destination preview_listitem_contents"
                     style="-moz-user-select:text;"/>
        <label anonid="preview_listitem_suffix"
               class="preview_listitem_suffix preview_listitem_contents"/>
      </vbox>
    </richlistitem>
    <menupopup id="preview_list_popup"
               onpopupshowing="return mediaManagePreview.onPopupShowing(event);">
      <menuitem id="perview_list_popupitem"
                label="&prefWindow.manageMedia.preview.reveal.label;"
                oncommand="mediaManagePreview.onRevealFile(event);"/>
    </menupopup>
    <hbox>
      <label id="preview_count_label"/>
      <label class="text-link" value="&prefWindow.manageMedia.preview.more.label;"
             onclick="mediaManagePreview.more()"
             id="preview_more_label"/>
    </hbox>
  </notificationbox>

  <!-- Import the Songbird services. -->
  <script type="application/x-javascript"
          src="chrome://global/content/globalOverlay.js"/>
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/windowUtils.js" />
  <script type="application/x-javascript"
          src="chrome://songbird/content/scripts/sbDataRemoteUtils.js" />

  <script type="application/x-javascript;version=1.8"
          src="chrome://songbird/content/scripts/manageMediaPreview.js"/>

</dialog>
